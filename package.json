{
  "name": "apex",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:jest": "jest",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "build:api": "node src/api/build-db.js",
    "json-server": "npm run build:api && cd src/api && json-server --watch db.json --port 3001",
    "dev": "concurrently \"npm run json-server\" \"ng serve\"",
    "start:api": "npm run build:api && cd src/api && json-server --watch db.json --port 3001"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.2",
    "@angular/cdk": "^20.1.2",
    "@angular/common": "^20.1.2",
    "@angular/compiler": "^20.1.2",
    "@angular/core": "^20.1.2",
    "@angular/forms": "^20.1.2",
    "@angular/material": "^20.1.2",
    "@angular/platform-browser": "^20.1.2",
    "@angular/router": "^20.1.2",
    "@fontsource/material-icons": "^5.2.5",
    "@fontsource/roboto": "^5.2.6",
    "@ngrx/effects": "^20.0.1",
    "@ngrx/signals": "^20.0.1",
    "@ngrx/store": "^20.0.1",
    "@ngrx/store-devtools": "^20.0.1",
    "@types/marked": "^6.0.0",
    "marked": "^16.1.1",
    "material-icons": "^1.13.14",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.2",
    "@compodoc/compodoc": "^1.1.26",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/angular": "^9.0.18",
    "@types/jest": "^30.0.0",
    "concurrently": "^9.2.1",
    "cypress": "^14.5.2",
    "jest": "^30.0.5",
    "json-server": "^1.0.0-beta.3",
    "storybook": "^9.0.18",
    "ts-jest": "^29.4.0",
    "typescript": "~5.8.3"
  }
}
